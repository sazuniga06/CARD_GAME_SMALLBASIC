      optionsArray[optionIndex] = ActionsAndVerbs[i]
      optionsArraypic[optionIndex] = ActionsAndVerbsPics[i]
      optionsArraySound[optionIndex] = ActionsAndVerbsSounds[i]
      optionIndex = optionIndex + 1
