'Definición del evento de los botones
Controls.ButtonClicked = Button_Clicked

Sub Button_Clicked
  clickedButton = Controls.LastClickedButton
  
  ' Definición del botón de salida
  If clickedButton = ExitButton Then
    Program.End()
  ElseIf clickedButton = StartButton Or clickedButton = ReturnButtonB Then
    CreateRuleWindow()
  ElseIf clickedButton = NextButton Or clickedButton = ReturnButton Then
    LevelSelect()
  ElseIf clickedButton = ReturnButtonA Then
    CreateMainMenu()
  EndIf
  
  ' Verificar si se hizo clic en algún botón de nivel
  For level = 1 To 10
    If clickedButton = LevelButtons[level] Then
      ' Asignar el nivel a una variable global para que esté disponible en AnswerClicked
      currentLevel = level
      ' Llamar a la subrutina del nivel
      CallLevelSubroutine()
    EndIf
  EndFor
EndSub

Sub CallLevelSubroutine
  If currentLevel = 1 Then
    Level1()
  ElseIf currentLevel = 2 Then
    Level2()
  ElseIf currentLevel = 3 Then
    Level3()
  ElseIf currentLevel = 4 Then
    Level4()
  ElseIf currentLevel = 5 Then
    Level5()
  ElseIf currentLevel = 6 Then
    Level6()
  ElseIf currentLevel = 7 Then
    Level7()
  ElseIf currentLevel = 8 Then
    Level8()
  ElseIf currentLevel = 9 Then
    Level9()
  ElseIf currentLevel = 10 Then
    Level10()
  EndIf
  
  ' Asignar la subrutina AnswerClicked al evento Controls.ButtonClicked
  Controls.ButtonClicked = AnswerClicked
EndSub


' Subrutina AnswerClicked
Sub AnswerClicked

  If canRunAnswerClicked = "True" Then
    answerClicked = Controls.LastClickedButton

    If answerClicked = op1 And Controls.GetButtonCaption(op1) = correctOption Then
      Sound.Play(WinnerSound)
      GraphicsWindow.ShowMessage("FELICIDADES", "Message")
      Sound.Stop(WinnerSound)
      LevelSelect()
    ElseIf answerClicked = op2 And Controls.GetButtonCaption(op2) = correctOption Then
      Sound.Play(WinnerSound)
      GraphicsWindow.ShowMessage("FELICIDADES", "Message")
      Sound.Stop(WinnerSound)
      LevelSelect()
    ElseIf answerClicked = op3 And Controls.GetButtonCaption(op3) = correctOption Then
      Sound.Play(WinnerSound)
      GraphicsWindow.ShowMessage("FELICIDADES", "Message")
      Sound.Stop(WinnerSound)
      LevelSelect()
    ElseIf answerClicked = op4 And Controls.GetButtonCaption(op4) = correctOption Then
      Sound.Play(WinnerSound)
      GraphicsWindow.ShowMessage("FELICIDADES", "Message")
      Sound.Stop(WinnerSound)
      LevelSelect()
    ElseIf answerClicked = ReturnButton Then
      LevelSelect()
    ElseIf (answerClicked = op1S) Or (answerClicked = op2S) Or (answerClicked = op3S) Or (answerClicked = op4S) Then
      If answerClicked = op1S Then
        Sound.Play(optionsArraySound[1])
        Program.Delay(2000)
        Sound.Stop(optionsArraySound[1])
      ElseIf answerClicked = op2S Then
        Sound.Play(optionsArraySound[2])
        Program.Delay(2000)
        Sound.Stop(optionsArraySound[2])
      ElseIf answerClicked = op3S Then 
        Sound.Play(optionsArraySound[3])
        Program.Delay(2000)
        Sound.Stop(optionsArraySound[3])
      ElseIf answerClicked = op4S Then
        Sound.Play(optionsArraySound[4])
        Program.Delay(2000)
        Sound.Stop(optionsArraySound[4])
      EndIf
    Else
      Sound.Play(GameOverSound)
      GraphicsWindow.ShowMessage("VUELVE A INTENTAR", "Message")
      Sound.Stop(GameOverSound)
    EndIf
  EndIf

EndSub


