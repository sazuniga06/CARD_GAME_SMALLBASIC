Sub AnswerClicked

  If canRunAnswerClicked = "True" Then
    answerClicked = Controls.LastClickedButton

    If answerClicked = op1 And Controls.GetButtonCaption(op1) = correctOption Then
      Sound.Play(WinnerSound)
      GraphicsWindow.ShowMessage("FELICIDADES", "Message")
      Sound.Stop(WinnerSound)
      LevelSelect()
    ElseIf answerClicked = op2 And Controls.GetButtonCaption(op2) = correctOption Then
      Sound.Play(WinnerSound)
