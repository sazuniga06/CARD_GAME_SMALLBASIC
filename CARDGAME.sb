'DefiniciÃ³n del evento de los botones
Controls.ButtonClicked = Button_Clicked

Sub Button_Clicked
  clickedButton = Controls.LastClickedButton
  
  ' DefiniciÃ³n del botÃ³n de salida
  If clickedButton = ExitButton Then
    Program.End()
  ElseIf clickedButton = StartButton Or clickedButton = ReturnButtonB Then
    CreateRuleWindow()
  ElseIf clickedButton = NextButton Or clickedButton = ReturnButton Then
    LevelSelect()
  ElseIf clickedButton = ReturnButtonA Then
    CreateMainMenu()
  EndIf
  
  ' Verificar si se hizo clic en algÃºn botÃ³n de nivel
  For level = 1 To 10
    If clickedButton = LevelButtons[level] Then
      ' Asignar el nivel a una variable global para que estÃ© disponible en AnswerClicked
      currentLevel = level
      ' Llamar a la subrutina del nivel
      CallLevelSubroutine()
    EndIf
  EndFor
EndSub

Sub CallLevelSubroutine
  If currentLevel = 1 Then
    Level1()
  ElseIf currentLevel = 2 Then
